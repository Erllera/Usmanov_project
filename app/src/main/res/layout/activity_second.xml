<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_tour"
    android:padding="20dp"
    tools:context=".SecondActivity">

    <TextView
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        android:fontFamily="@font/mustica"
        android:shadowColor="@color/black"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="15"
        android:text="Выберите страну"
        android:textColor="@color/white"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_paris"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/mustica"
        android:text="В Париж"
        android:textSize="24sp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choose" />

    <Button
        android:backgroundTint="@color/blue"
        android:id="@+id/btn_havaii"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="180dp"
        android:fontFamily="@font/mustica"
        android:text="В Гавайи"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_paris" />

    <Button
        android:id="@+id/btn_dubai"
        android:backgroundTint="@color/purple"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="88dp"
        android:fontFamily="@font/mustica"
        android:text="В Дубай"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_havaii" />

    <Button
        android:backgroundTint="@color/orange"
        android:id="@+id/new_york"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="@font/mustica"
        android:text="В Нью-Йорк"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dubai" />




</androidx.constraintlayout.widget.ConstraintLayout>